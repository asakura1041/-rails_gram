<!DOCTYPE html>
<html>
  <head>
    <title>Dog-diary</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    

    <nav class="navbar is-warning">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-4" style="font-family: cursive;">Dog-diary</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <% if user_signed_in? %>
        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to recipes_path, class: "navbar-item button is-warning is-light", method: :get do %>
                <i class="fas fa-dog"></i> ワンちゃん一覧
            <% end %>
          </div>
          <div class="navbar-item">
            <%= link_to new_recipe_path, class: "navbar-item button is-warning is-light", method: :get do %>
                <i class="fas fa-file-image"></i> 新規投稿
            <% end %>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <p class="control">
                  
                </p>
                <p class="control">
                  <%= link_to users_path, class: "navbar-item button is-warning is-light", method: :get do %>
                      <i class="fas fa-users"></i> ドッググラマー一覧
                  <% end %>
                </p>
                <p class="control">
                  <%= link_to user_path(current_user), class: "navbar-item button is-warning is-light", method: :get do %>
                      <i class="fas fa-user-alt"></i> マイページ
                  <% end %>
                </p>
                <p class="control">
                  <%= link_to destroy_user_session_path, class: "navbar-item button is-warning is-light", method: :delete do %>
                      <i class="fas fa-sign-out-alt"></i> ログアウト
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to recipes_path, class: "navbar-item button is-warning is-light", method: :get do %>
                <i class="fas fa-dog"></i> ワンちゃん一覧
            <% end %>
          </div>
          <div class="navbar-item">
            <%= link_to users_path, class: "navbar-item button is-warning is-light", method: :get do %>
                <i class="fas fa-users"></i> ドッググラマー一覧
            <% end %>
          </div>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <p class="control">
                  <%= link_to new_user_session_path, class: "navbar-item button is-warning is-light", method: :get do %>
                      <i class="fas fa-sign-in-alt"></i> ログイン
                  <% end %>
                </p>
                <p class="control">
                  <%= link_to new_user_registration_path, class: "navbar-item button is-warning is-light", method: :get do %>
                      <i class="fas fa-plus-circle"></i> 新規登録
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="cover"></div>
      <div class="header-menu-sp">
        <i class="fas fa-times"></i>
        <nav>
          <div>MENU</div>
          <ul id="header-menu-lists">
            <% if user_signed_in? %>
              <li>
                <%= link_to recipes_path, method: :get do %>
                    <i class="fas fa-dog"></i> ワンちゃん一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_recipe_path, method: :get do %>
                <i class="fas fa-file-image"></i> 新規投稿
            <% end %>
              </li>
              <li>
                <%= link_to users_path, method: :get do %>
                    <i class="fas fa-users"></i> ドッググラマー一覧
                <% end %>
              </li>
              <li>
                <%= link_to user_path(current_user), method: :get do %>
                    <i class="fas fa-user-alt"></i> マイページ
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to recipes_path, method: :get do %>
                    <i class="fas fa-dog"></i> ワンちゃん一覧
                <% end %>
              </li>
              <li>
                <%= link_to users_path, method: :get do %>
                    <i class="fas fa-users"></i> ドッググラマー一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, method: :get do %>
                    <i class="fas fa-sign-in-alt"></i> ログイン
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, method: :get do %>
                    <i class="fas fa-plus-circle"></i> 新規登録
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </nav>
    
    <main>
      <% if flash[:notice] %>
        <div class="notification is-info">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>
  
      <% if flash[:alert] %>
        <div class="notification is-danger">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>
      
      <%= yield %>
    </main>
    
    
    <%= javascript_include_tag "template.js" %>
  </body>
</html>
